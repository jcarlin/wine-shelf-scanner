# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# LLM for OCR normalization
# USE_LITELLM enables unified interface with automatic fallbacks (default: true)
USE_LITELLM=true

# Choose primary provider: "gemini" (default), "claude", or "auto" (uses LiteLLM)
LLM_PROVIDER=gemini

# API keys - LiteLLM will use available keys for fallbacks
# At least one is required. Multiple keys enable automatic fallback.

# Get Gemini key from: https://aistudio.google.com/apikey (recommended - fastest/cheapest)
GOOGLE_API_KEY=your-gemini-api-key-here

# Get Claude key from: https://console.anthropic.com/settings/keys (reliable fallback)
# ANTHROPIC_API_KEY=your-claude-api-key-here

# Get OpenAI key from: https://platform.openai.com/api-keys (additional fallback)
# OPENAI_API_KEY=your-openai-api-key-here

# Mock mode (set to "true" to use mock responses)
USE_MOCKS=true

# Debug mode (include pipeline stats in all scan responses)
# DEBUG_MODE=true

# Feature flags (all default to true)
# FEATURE_WINE_MEMORY=false
# FEATURE_SHELF_RANKING=false
# FEATURE_SAFE_PICK=false
# FEATURE_PAIRINGS=false
# FEATURE_TRUST_SIGNALS=false
