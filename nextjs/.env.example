# Wine Shelf Scanner Web - Environment Variables
#
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production deployment

# Backend API URL
# Local development: http://localhost:8000
# Production: https://wine-scanner-api-82762985464.us-central1.run.app
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Enable debug mode (shows pipeline debug info)
NEXT_PUBLIC_DEBUG_MODE=true

# Use mock service instead of real API (for development without backend)
NEXT_PUBLIC_USE_MOCKS=false
